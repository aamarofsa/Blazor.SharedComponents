@inherits LayoutComponentBase

<RadzenLayout style="height: 100vh">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => Expanded = !Expanded)" />
            <RadzenLabel Text="Shared Components" />
        </RadzenStack>
    </RadzenHeader>
   
    <FSA_SideBar Expanded="Expanded" />

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    @* <RadzenFooter>
        Footer
    </RadzenFooter> *@
</RadzenLayout>

@code {
    bool Expanded = true;
}